<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="新建店铺，请输入店铺名称、地点、可预约人数以及店铺种类"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/ic_store"
        android:drawablePadding="16dp"
        android:inputType="text"
        android:hint="Storename"
        android:padding="16dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/light_gray" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="16dp"
        android:hint="Location"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/light_gray" />

    <EditText
        android:id="@+id/et_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_location"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/ic_limit"
        android:drawablePadding="16dp"
        android:hint="People Limitation"
        android:inputType="number"
        android:padding="16dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/light_gray" />

    <EditText
        android:id="@+id/et_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_limit"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/ic_category"
        android:drawablePadding="16dp"
        android:hint="Service"
        android:inputType="none|text"
        android:padding="16dp"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/light_gray" />

    <Button
        android:id="@+id/btn_adminnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_service"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bg"
        android:text="New"
        android:textColor="@color/white" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="310dp"
        android:layout_height="344dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"
        android:layout_marginTop="497dp"
        android:layout_marginBottom="50dp"
    />



</RelativeLayout>